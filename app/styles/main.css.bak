* {
    color: #fff;
    font-family: "RobotoDraft","Roboto",sans-serif;
}

p {
    font-size: 14px;
}

body,html {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    background-color: #673AB7;
}

#tile-wrapper {
    width: 100%
}

#tile-wrapper ul {
    display: table;
    margin: 0;
    padding: 0;
    width: 100%;
    height: 200px;
}

.title {
    max-height: 100px;
}

#tile-wrapper ul li {
    display: table-cell;
    margin: 0;
    padding: 0;
    width: 50%;
    text-align: center;
    outline: 1px solid #000;
    vertical-align: middle;
}

/*navbar*/

.navigation {
    max-width: none;
    background: #512DA8;
    padding: 0;
    text-align: center;
}
.navigation li {
    list-style-type: none;
    float: left;
}
.navigation li a {
    display: block;
    color: #fff;
    list-style-type: none;
    padding: 10px;
    text-decoration: none;
}
.navigation li a:hover { background: #3F51B5; }

.navigation { margin: 0 15px; }
.navigation li { float: none; }
.navigation li a { border-bottom: 1px solid #fff; }

.group  {
    padding-top: 20px;
}

.angular-google-map-container {
    height: 200px;
    width: 300px;
}

#contacts {
    margin: 0px;
    padding: 0px;
    display: block;
    height: 100%;
    width: 100%;
}

/*button*/

.btn {
    -webkit-border-radius: 0;
    -moz-border-radius: 0;
    border-radius: 0px;
    font-family: Arial;
    color: #ffffff;
    font-size: 15px;
    background: #512DA8;
    padding: 10px 20px 10px 20px;
    border: solid #1f628d 0px;
    text-decoration: none;
}

.btn:hover {
    background: #512DA8;
    text-decoration: none;
}

@font-face {
    font-family: "Roboto Condensed";
    font-style: normal;
    font-weight: 300;
    src: url("../fonts/RobotoCondensed-Light.ttf") format('truetype');
} 


.details {
    padding:8px;
}

#contacts {
    text-align: center;
    padding-top:2px;
}
